<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:orientation="vertical"
    android:background="#CCC8C8"
    android:layout_height="280dp">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="New Point"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#B30101"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtnhapx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tọa độ X"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edtnhapy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tọa độ Y"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edtnhapdiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên điểm"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:backgroundTint="#810505"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/addscore"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Add"
            android:layout_weight="1"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>